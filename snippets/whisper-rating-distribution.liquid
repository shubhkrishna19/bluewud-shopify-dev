{% comment %}
  Whisper Rating Distribution
  Mirrored from RatingDistribution.tsx (ecommerce-app)
  
  Accepts:
  - rating: {Number} Average rating
  - review_count: {Number} Total review count
  - reviews: {Array} List of reviews (optional, for distribution calculation)
{% endcomment %}

{%- liquid
  assign rating_value = rating | default: product.metafields.reviews.rating.value | default: 0
  assign total_reviews = review_count | default: product.metafields.reviews.rating_count | default: 0
  
  # Default distribution mapping (Realistic pattern if no data provided)
  assign count_5 = 0
  assign count_4 = 0
  assign count_3 = 0
  assign count_2 = 0
  assign count_1 = 0
  
  # If we have reviews passed in, we can calculate distribution
  if reviews
    for review in reviews
      case review.rating
        when 5
          assign count_5 = count_5 | plus: 1
        when 4
          assign count_4 = count_4 | plus: 1
        when 3
          assign count_3 = count_3 | plus: 1
        when 2
          assign count_2 = count_2 | plus: 1
        when 1
          assign count_1 = count_1 | plus: 1
      endcase
    endfor
  else
    # Fallback to realistic distribution if total_reviews > 0
    if total_reviews > 0
      assign count_5 = total_reviews | times: 0.68 | round
      assign count_4 = total_reviews | times: 0.20 | round
      assign count_3 = total_reviews | times: 0.08 | round
      assign count_2 = total_reviews | times: 0.03 | round
      assign count_1 = total_reviews | times: 0.01 | round
    endif
  endif
-%}

<div class="ws-review-summary">
  <div class="ws-review-summary__header">
    <h3 class="ws-review-summary__title">Customer Reviews</h3>
    <a href="#whisper-review-form" class="ws-review-summary__link">Write a review</a>
  </div>

  <div class="ws-review-summary__content">
    <div class="ws-review-summary__overall">
      <div class="ws-review-summary__rating">
        {{ rating_value | plus: 0.0 | round: 1 }}
      </div>
      <div class="ws-review-summary__stars">
        {%- for i in (1..5) -%}
          {%- if i <= rating_value -%}
            <svg class="ws-review-summary__star ws-review-summary__star--filled" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          {%- else -%}
            <svg class="ws-review-summary__star" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <p class="ws-review-summary__subtext">
        Based on {{ total_reviews }} reviews
      </p>
    </div>

    <div class="ws-review-summary__distribution">
      {%- assign star_levels = '5,4,3,2,1' | split: ',' -%}
      {%- for star_level in star_levels -%}
        {%- liquid
          assign star = star_level | plus: 0
          case star
            when 5
              assign current_count = count_5
              assign bar_color = '#10B981'
            when 4
              assign current_count = count_4
              assign bar_color = '#10B981'
            when 3
              assign current_count = count_3
              assign bar_color = '#F59E0B'
            when 2
              assign current_count = count_2
              assign bar_color = '#F97316'
            else
              assign current_count = count_1
              assign bar_color = '#EF4444'
          endcase

          if total_reviews > 0
            assign percentage = current_count | times: 100.0 | divided_by: total_reviews
          else
            assign percentage = 0
          endif
        -%}

        <div class="ws-review-summary__row">
          <div class="ws-review-summary__label">
            <span>{{ star }}</span>
            <svg class="ws-review-summary__label-star" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>

          <div class="ws-review-summary__bar">
            <span class="ws-review-summary__bar-fill" style="width: {{ percentage }}%; background-color: {{ bar_color }};"></span>
          </div>

          <div class="ws-review-summary__meta">
            <span class="ws-review-summary__percent">{{ percentage | round }}%</span>
            <span class="ws-review-summary__count">({{ current_count }})</span>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  <div class="ws-review-summary__stats">
    <div class="ws-review-summary__stat">
      <div class="ws-review-summary__stat-value">
        {% if total_reviews > 0 %}{{ count_5 | plus: count_4 | times: 100 | divided_by: total_reviews }}%{% else %}0%{% endif %}
      </div>
      <p class="ws-review-summary__stat-label">Recommend this product</p>
    </div>
    <div class="ws-review-summary__stat">
      <div class="ws-review-summary__stat-value">
        {% if total_reviews > 0 %}{{ count_5 | times: 100 | divided_by: total_reviews }}%{% else %}0%{% endif %}
      </div>
      <p class="ws-review-summary__stat-label">5-star ratings</p>
    </div>
    <div class="ws-review-summary__stat">
      <div class="ws-review-summary__stat-value">
        {% if total_reviews > 100 %}1M+{% elsif total_reviews > 10 %}100K+{% else %}10K+{% endif %}
      </div>
      <p class="ws-review-summary__stat-label">Global customers</p>
    </div>
  </div>
</div>
