{%- comment -%}
  WoodenStreet Component: Offers & EMI (E-03)
{%- endcomment -%}

<div class="ws-offers-box" data-ws-offers-box>
  <div class="ws-offers-box__header">
    <svg class="ws-offers-box__icon" viewBox="0 0 24 24" fill="none" stroke="#C7431A" stroke-width="2">
      <path d="M20 12V8H6a2 2 0 0 1-2-2c0-1.1.9-2 2-2h12v4" />
      <path d="M4 6v12c0 1.1.9 2 2 2h14v-4" />
      <path d="M18 12a2 2 0 0 0-2 2c0 1.1.9 2 2 2h4v-4h-4z" />
    </svg>
    <h3 class="ws-offers-box__title">Save Big & Pay Easy</h3>
  </div>
  
  <ul class="ws-offers-box__list">
    <li class="ws-offers-box__item">
      <div class="ws-offers-box__content">
        <span class="ws-offers-box__label">Bank Offer</span>
        <span class="ws-offers-box__text">Flat ₹1,500 OFF on HDFC Credit Cards. Min transaction ₹15,000.</span>
      </div>
    </li>
    <li class="ws-offers-box__item">
      <div class="ws-offers-box__content">
        <span class="ws-offers-box__label">Coupon</span>
        <span class="ws-offers-box__text">Use code <strong>FURNITURE10</strong> for extra 10% off (Max ₹2000).</span>
      </div>
    </li>
  </ul>

  <div class="ws-emi-accordion">
    <button class="ws-emi-trigger" type="button" onclick="this.nextElementSibling.classList.toggle('is-open')">
      <span>View EMI Plans</span>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </button>
    <div class="ws-emi-content">
      <table class="ws-emi-table">
        <thead>
          <tr>
            <th>Plan</th>
            <th>Interest</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>3 Months</td>
            <td>13% p.a</td>
            <td>₹{{ product.price | divided_by: 3 | money }}/mo</td>
          </tr>
          <tr>
            <td>6 Months</td>
            <td>14% p.a</td>
            <td>₹{{ product.price | divided_by: 6 | money }}/mo</td>
          </tr>
          <tr>
            <td>9 Months</td>
            <td>15% p.a</td>
            <td>₹{{ product.price | divided_by: 9 | money }}/mo</td>
          </tr>
          <tr>
            <td>12 Months</td>
            <td>No Cost*</td>
            <td>₹{{ product.price | divided_by: 12 | money }}/mo</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
