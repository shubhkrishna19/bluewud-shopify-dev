<ul class="site-header-actions header-actions" data-header-actions>
  {% if shop.customer_accounts_enabled %}
    {% unless customer %}
      <li class="site-header-actions__account-link">
        <span class="site-header__account-icon">
          {% render 'icon-library', id: 'icon-account' %}
        </span>
        <a href="{{ routes.account_login_url }}" class="site-header_account-link-text header-actions__action">
          {{ 'header.account.login' | t }}
        </a>
      </li>
    {% else %}
      <li class="site-header-actions__account-link">
        <span class="site-header__account-icon">
          {% render 'icon-library', id: 'icon-account' %}
        </span>
        <span class="site-header__account-links">
         <a href="{{ routes.account_url }}" class="site-header__account-link--account header-actions__action">{{ 'header.account.title' | t }}</a>
         <a href="{{ routes.account_logout_url }}" class="site-header__account-link--logout header-actions__action" data-no-instant>{{ 'header.account.logout' | t }}</a>
        </span>
      </li>
    {% endunless %}
  {% endif %}
</ul>
