{% comment %}
  WoodenStreet Mobile Bottom Navigation (F-01)
{% endcomment %}


<nav class="mobile-bottom-nav">
  <a href="{{ routes.root_url }}" class="mobile-bottom-nav__item {% if template == 'index' %}is-active{% endif %}">
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      <polyline points="9 22 9 12 15 12 15 22"></polyline>
    </svg>
    <span>Home</span>
  </a>

  <a href="{{ routes.collections_url }}" class="mobile-bottom-nav__item {% if template contains 'collection' %}is-active{% endif %}">
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
      <rect x="3" y="3" width="7" height="7"></rect>
      <rect x="14" y="3" width="7" height="7"></rect>
      <rect x="14" y="14" width="7" height="7"></rect>
      <rect x="3" y="14" width="7" height="7"></rect>
    </svg>
    <span>Store</span>
  </a>

  <a href="/pages/wishlist" class="mobile-bottom-nav__item {% if template contains 'wishlist' %}is-active{% endif %}">
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg>
    <span>Wishlist</span>
  </a>

  <a href="{{ routes.cart_url }}" class="mobile-bottom-nav__item {% if template contains 'cart' %}is-active{% endif %}" data-ajax-cart-trigger>
    <svg class="mobile-bottom-nav__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
      <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <path d="M16 10a4 4 0 0 1-8 0"></path>
    </svg>
    <span>Bag</span>
    {% if cart.item_count > 0 %}
      <span class="mobile-bottom-nav__count" data-cart-count>{{ cart.item_count }}</span>
    {% endif %}
  </a>
</nav>

<script>
  // Simple Cart Count Update Listener (if using AJAX cart)
  document.addEventListener('cart:updated', function(e) {
    const countEl = document.querySelector('[data-cart-count]');
    const count = e.detail.cart.item_count;
    if (countEl) {
      countEl.textContent = count;
      countEl.style.display = count > 0 ? 'flex' : 'none';
    }
  });
</script>
