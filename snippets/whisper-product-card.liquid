{% comment %}
  Whisper Enhanced Product Card
  Incorporating Ecommerce-App aesthetics (Hover scale, gradients, slate borders)
{% endcomment %}

<div class="whisper-product-card group relative flex flex-col h-full bg-[var(--color-bg-secondary)] border-2 border-[var(--color-border-primary)] rounded-2xl overflow-hidden transition-all duration-500 hover:border-[var(--color-accent-primary)] hover:shadow-2xl animate-fade-in-up">
  <!-- Image Container -->
  <div class="relative aspect-[4/5] overflow-hidden bg-slate-100">
    <img 
      src="{{ product.featured_image | img_url: '600x' }}" 
      alt="{{ product.title }}"
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      loading="lazy"
    >
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Quick Add (Reference Style) -->
    <div class="absolute bottom-4 left-4 right-4 translate-y-8 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
      <button class="w-full bg-white text-black py-2 rounded-lg font-bold text-xs uppercase tracking-widest hover:bg-[var(--color-accent-primary)] hover:text-white transition-colors">
        Quick Add
      </button>
    </div>
  </div>

  <!-- Content -->
  <div class="p-5 flex-1 flex flex-col">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-sm font-black uppercase text-[var(--color-text-primary)] tracking-tight leading-tight group-hover:text-[var(--color-accent-primary)] transition-colors">
        {{ product.title }}
      </h3>
      <div class="flex items-center gap-1 text-[#F59E0B]">
        <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
        <span class="text-[10px] font-bold">{{ product.metafields.reviews.rating.value | default: '4.8' }}</span>
      </div>
    </div>
    
    <div class="mt-auto pt-4 border-t border-[var(--color-border-primary)] flex items-center justify-between">
      <div class="flex flex-col">
        <span class="text-lg font-black text-[var(--color-text-primary)]">
          {{ product.price | money }}
        </span>
        {% if product.compare_at_price > product.price %}
          <span class="text-[10px] line-through text-[var(--color-text-tertiary)]">
            {{ product.compare_at_price | money }}
          </span>
        {% endif %}
      </div>
      
      <div class="flex gap-2">
        <button class="w-8 h-8 flex items-center justify-center rounded-full border border-[var(--color-border-primary)] text-[var(--color-text-tertiary)] hover:bg-slate-100 hover:text-red-500 transition-all">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
        </button>
      </div>
    </div>
  </div>
</div>
