{{ 'component-woodenstreet-video.css' | asset_url | stylesheet_tag }}

<section class="ws-video" aria-label="Product Showcase">
  <div class="page-width">
    <div class="ws-video__container">
      <div class="ws-video__overlay">
        <h2 class="ws-video__title">Experience Real Furniture in Your Home</h2>
        <p class="ws-video__subtitle">
          <span class="ws-video__subtitle-line"></span>
          Factory Direct Quality
        </p>
      </div>
      
      <video class="ws-video__media" autoplay muted loop playsinline>
        <source src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-video.mp4?v=1" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      
      <div class="ws-video__play-button-wrapper">
         <div class="ws-video__play-button">
            <svg viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
         </div>
      </div>
    </div>
  </div>
</section>

