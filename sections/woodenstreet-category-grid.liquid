<section class="ws-category-grid" aria-label="Shop by Category">
  <div class="page-width">
    <div class="ws-category-grid__header" data-aos="fade-up">
      <h2 class="ws-category-grid__title uppercase italic font-black text-3xl tracking-tighter">Shop by Room & Category</h2>
      <p class="ws-category-grid__subtitle text-gray-500 font-bold uppercase tracking-widest text-xs">Explore curated collections for every corner</p>
    </div>

    <div class="ws-category-grid__items">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="ws-category-card group" data-aos="fade-up" data-aos-delay="{{ forloop.index | times: 100 }}">
          <div class="ws-category-card__image-wrapper overflow-hidden rounded-2xl aspect-square relative shadow-md group-hover:shadow-xl transition-all duration-300">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title }}" class="ws-category-card__image object-cover w-full h-full group-hover:scale-110 transition-transform duration-500" loading="lazy">
            {% else %}
              <div class="w-full h-full bg-gray-100 flex items-center justify-center text-gray-400">
                {{ 'image' | placeholder_svg_tag: 'w-20 h-20' }}
              </div>
            {% endif %}
            <div class="ws-category-card__overlay absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="ws-category-card__content absolute bottom-0 left-0 p-6">
              <h3 class="ws-category-card__title text-white font-black italic uppercase text-lg leading-tight">{{ block.settings.title }}</h3>
              <p class="ws-category-card__count text-white/70 text-[10px] font-bold tracking-widest uppercase mt-1">{{ block.settings.count_text | default: 'Explore Now' }}</p>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .ws-category-grid {
    padding: 100px 0;
    background: var(--ws-bg-cream, #FDFBF7);
  }
  .ws-category-grid__header {
    text-align: center;
    margin-bottom: 60px;
  }
  .ws-category-grid__title {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    letter-spacing: -0.04em;
    color: var(--ws-black, #1A1A1A);
  }
  .ws-category-grid__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 800;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--ws-orange, #C7431A);
    margin-top: 12px;
  }
  .ws-category-grid__items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
  .ws-category-card {
    text-decoration: none;
    display: block;
    position: relative;
    border-radius: 32px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 4px 30px rgba(0,0,0,0.04);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }
  .ws-category-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  }
  .ws-category-card__image-wrapper {
    aspect-ratio: 1 / 1.1;
    overflow: hidden;
    position: relative;
  }
  .ws-category-card__image {
    transition: transform 1.2s cubic-bezier(0.215, 0.61, 0.355, 1);
  }
  .ws-category-card:hover .ws-category-card__image {
    transform: scale(1.1);
  }
  .ws-category-card__overlay {
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, transparent 60%);
    transition: opacity 0.4s ease;
  }
  .ws-category-card__content {
    padding: 32px;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    transition: transform 0.4s ease;
  }
  .ws-category-card__title {
    font-family: 'Poppins', sans-serif;
    font-weight: 800;
    font-size: 1.5rem;
    color: #fff;
    margin: 0;
    letter-spacing: -0.02em;
  }
  .ws-category-card:hover .ws-category-card__content {
    transform: translateY(-8px);
  }
  
  @media screen and (min-width: 990px) {
    .ws-category-grid__items {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  @media screen and (max-width: 768px) {
    .ws-category-grid {
      padding: 60px 0;
    }
    .ws-category-grid__items {
      gap: 16px;
      padding: 0 16px;
    }
    .ws-category-grid__header {
        margin-bottom: 32px;
    }
    .ws-category-card__title {
        font-size: 1.1rem;
    }
    .ws-category-card__content {
        padding: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "WS Category Grid",
  "max_blocks": 8,
  "settings": [],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Living Room"
        },
        {
          "type": "text",
          "id": "count_text",
          "label": "Subtitle",
          "default": "200+ Designs"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "WS Category Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}
