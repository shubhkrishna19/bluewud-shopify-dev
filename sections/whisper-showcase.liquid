{% comment %}
  Whisper Component Showcase
  A high-polish demonstration of the ported ecommerce-app components.
{% endcomment %}

<section class="whisper-showcase">
  <div class="whisper-showcase__container">
    <div class="whisper-showcase__stack">
      <!-- Trust, Stock & Product Card Demo -->
      <div class="whisper-showcase__split">
        <div class="whisper-showcase__panel">
          <h2 class="whisper-showcase__title">
            Visual Consistency & <span class="whisper-showcase__title-accent">Social Proof</span>
          </h2>
          {% render 'whisper-stock-indicator', stock: 3 %}
          <div class="whisper-showcase__trust">
            {% render 'whisper-trust-signals' %}
          </div>
        </div>
        <div class="whisper-showcase__panel">
          <h3 class="whisper-showcase__eyebrow">Featured Card (High-Polish)</h3>
          {% assign demo_product = collections.all.products.first %}
          {% render 'whisper-product-card', product: demo_product %}
        </div>
      </div>

      <!-- Reviews Integration -->
      <div class="whisper-showcase__reviews">
        <div class="whisper-showcase__reviews-header">
          <h2 class="whisper-showcase__reviews-title">Customer Sentiment</h2>
          <p class="whisper-showcase__reviews-copy">Mirroring the Ecommerce-App rating distribution logic.</p>
        </div>
        {% render 'whisper-rating-distribution', rating: 4.8, review_count: 1250 %}
      </div>

      <!-- UGC Gallery Integration -->
      <div class="whisper-showcase__ugc">
        {% render 'whisper-ugc-gallery' %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Whisper Showcase",
  "settings": [],
  "presets": [
    {
      "name": "Whisper Showcase"
    }
  ]
}
{% endschema %}
