<section class="promo-grid--container whisper-promo-grid">
  <div class="promo-images-header whisper-promo-grid__header {% if section.settings.text != blank %}subtitle-enabled{% endif %}">
  {% if section.settings.title != blank %}
    <h2 class="home-section--title whisper-promo-grid__title">
      {{ section.settings.title | escape }}
    </h2>
  {% endif %}
  {% if section.settings.text != blank %}
    <div class="rte whisper-promo-grid__subtitle">
      {{ section.settings.text }}
    </div>
  {% endif %}
  </div>
  
  {% if section.blocks.size > 0 %}
  <div class="promo-grid--inner promo-grid__columns--{{ section.settings.section_columns }} whisper-promo-grid__grid">
    {% for block in section.blocks %}
    {% if block.settings.image != blank %}
    <div class="promo-grid--promo-img whisper-promo-grid__item">
      <a href="{{ block.settings.block_link }}">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
      </a>
    </div>
    {% endif %}
    {% endfor %}
  </div>
  {% endif %}
</section>

{% schema %}
  {
    "name": "Promo Images",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Promo Images"
      },
	  {
        "type": "text",
        "id": "text",
        "label": "Text"
      },
      {
        "id": "section_columns",
        "type": "range",
        "label": "Number of columns",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      }
	],
    "blocks": [
      {
        "type": "promo",
        "name": "Promo Image",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "block_link",
            "label": "Link"
          }
      	]
      }
    ],
    "presets": [
      {
        "name": "Promo Images",
        "category": "Image",
        "blocks": [
          {
            "type": "promo"
          },
          {
            "type": "promo"
          },
          {
            "type": "promo"
          },
          {
            "type": "promo"
          },
          {
            "type": "promo"
          },
          {
            "type": "promo"
          }
        ]
      }
    ],
    "templates": [
      "index",
      "product"
    ]
  }
{% endschema %}

