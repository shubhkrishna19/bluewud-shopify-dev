{% comment %}
  Whisper Lookbook (Shop by Room)
  Mirrored from Home.tsx Lookbook section
{% endcomment %}

<section class="whisper-lookbook">
  <div class="whisper-lookbook__container">
    <div class="whisper-lookbook__header animate-fade-in-up">
      <h2 class="whisper-lookbook__title">{{ section.settings.title | escape }}</h2>
      <p class="whisper-lookbook__subtitle">{{ section.settings.subheading | escape }}</p>
    </div>

    <div class="whisper-lookbook__grid">
      {%- for block in section.blocks -%}
        <article
          class="whisper-lookbook__card whisper-card-hover animate-fade-in-up"
          style="animation-delay: {{ forloop.index | times: 150 }}ms;"
        >
          {% if block.settings.image != blank %}
            <div
              class="whisper-lookbook__image"
              style="background-image: url('{{ block.settings.image | img_url: '800x' }}')"
              aria-hidden="true"
            ></div>
          {% else %}
            <div class="whisper-lookbook__image whisper-lookbook__image--placeholder" aria-hidden="true"></div>
          {% endif %}

          <div class="whisper-lookbook__overlay" aria-hidden="true"></div>

          <div class="whisper-lookbook__content">
            <div>
              <span class="whisper-lookbook__tag">{{ block.settings.tag | escape }}</span>
              <h3 class="whisper-lookbook__card-title">{{ block.settings.title | escape }}</h3>
              <p class="whisper-lookbook__card-text">{{ block.settings.text | escape }}</p>
            </div>

            <a href="{{ block.settings.link }}" class="whisper-lookbook__link">
              {{ block.settings.link_text | escape }}
              <span class="whisper-lookbook__link-line" aria-hidden="true"></span>
            </a>
          </div>
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Whisper Lookbook",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop by Room"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our curated furniture collections designed for every space in your home."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Room Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "tag",
          "label": "Tag",
          "default": "BEDROOM"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Beds & Wardrobes"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Create your perfect sanctuary with our elegant bed frames and wardrobes."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Explore Room"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whisper Lookbook",
      "blocks": [
        { 
          "type": "category", 
          "settings": { 
            "tag": "BEDROOM", 
            "title": "Beds & Wardrobes",
            "link_text": "Shop Bedroom"
          } 
        },
        { 
          "type": "category", 
          "settings": { 
            "tag": "LIVING ROOM", 
            "title": "TV Units & Tables",
            "link_text": "Shop Living",
            "text": "Elevate your lounging experience with premium TV units and stylish coffee tables."
          } 
        },
        { 
          "type": "category", 
          "settings": { 
            "tag": "OFFICE", 
            "title": "Study & Bookshelves",
            "link_text": "Shop Office",
            "text": "Boost productivity with ergonomically designed study tables and spacious bookshelves."
          } 
        }
      ]
    }
  ]
}
{% endschema %}
