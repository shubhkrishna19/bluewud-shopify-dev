{% comment %}
  Whisper Lookbook (Shop by Room)
  Mirrored from Home.tsx Lookbook section
{% endcomment %}

<section class="whisper-lookbook py-24 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950 relative overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl translate-x-1/3 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-[32rem] h-[32rem] bg-cyan-500/10 rounded-full blur-[180px] -translate-x-1/3 translate-y-1/3"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16 animate-fade-in-up">
      <h2 class="text-5xl font-black text-white mb-6 tracking-tight italic">
        {{ section.settings.title | escape }}
      </h2>
      <p class="text-xl text-neutral-300 max-w-3xl mx-auto font-medium leading-relaxed">
        {{ section.settings.subheading | escape }}
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-10">
      {%- for block in section.blocks -%}
        <div class="group relative overflow-hidden rounded-2xl bg-neutral-900/80 border border-neutral-800 shadow-lg transition-all duration-500 hover:shadow-2xl hover:scale-[1.02] animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 150 }}ms;">
          {% if block.settings.image != blank %}
            <div class="absolute inset-0 bg-cover bg-center opacity-60 group-hover:opacity-80 transition-opacity duration-500"
                 style="background-image: url('{{ block.settings.image | img_url: '800x' }}')"></div>
          {% else %}
            <div class="absolute inset-0 bg-neutral-800 opacity-60"></div>
          {% endif %}
          
          <div class="absolute inset-0 bg-gradient-to-b from-neutral-900/80 via-neutral-900/40 to-neutral-950/95"></div>
          
          <div class="relative z-10 p-10 h-full flex flex-col justify-between min-h-[450px]">
            <div>
              <span class="inline-block px-4 py-2 text-[10px] font-black tracking-widest uppercase text-white border border-neutral-700 rounded-full bg-neutral-900/70">
                {{ block.settings.tag | escape }}
              </span>
              <h3 class="mt-6 text-3xl font-black text-white italic leading-tight uppercase tracking-tighter">{{ block.settings.title | escape }}</h3>
              <p class="mt-4 text-neutral-300 text-sm font-medium leading-relaxed">
                {{ block.settings.text | escape }}
              </p>
            </div>
            
            <a href="{{ block.settings.link }}" class="mt-10 inline-flex items-center gap-4 text-white font-black uppercase tracking-widest text-xs group/link hover:text-blue-400 transition-colors">
              {{ block.settings.link_text | escape }}
              <span class="w-12 h-0.5 bg-neutral-500 group-hover/link:bg-blue-400 transition-all group-hover/link:w-20"></span>
            </a>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Whisper Lookbook",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop by Room"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our curated furniture collections designed for every space in your home."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Room Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "tag",
          "label": "Tag",
          "default": "BEDROOM"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Beds & Wardrobes"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Create your perfect sanctuary with our elegant bed frames and wardrobes."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Shop Bedroom"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whisper Lookbook",
      "blocks": [
        { "type": "category", "settings": { "tag": "BEDROOM", "title": "Beds & Wardrobes" } },
        { "type": "category", "settings": { "tag": "LIVING ROOM", "title": "TV Units & Tables" } },
        { "type": "category", "settings": { "tag": "OFFICE", "title": "Study & Bookshelves" } }
      ]
    }
  ]
}
{% endschema %}
