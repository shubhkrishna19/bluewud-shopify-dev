
<section class="ws-sticky-footer" data-sticky-footer>
  <div class="ws-sticky-footer__content">
    <div class="ws-sticky-footer__info">
      <span class="ws-sticky-footer__title">{{ section.settings.title }}</span>
      <span class="ws-sticky-footer__price">{{ section.settings.price_text }}</span>
    </div>
    <a class="ws-sticky-footer__cta" href="{{ section.settings.cta_link }}">
      {{ section.settings.cta_label }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "WS Sticky Footer (Mobile)",
  "tag": "section",
  "class": "ws-sticky-footer-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ready to order?"
    },
    {
      "type": "text",
      "id": "price_text",
      "label": "Price",
      "default": "From â‚¹0"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA label",
      "default": "Add to cart"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA link"
    }
  ],
  "presets": [
    {
      "name": "WS Sticky Footer (Mobile)"
    }
  ]
}
{% endschema %}
