{% comment %}
  Woodenstreet Hybrid Hero (Phase A-03)
{% endcomment %}

<section class="woodenstreet-hero">
  <div class="woodenstreet-hero__media">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag: class: 'woodenstreet-hero__image', loading: 'lazy' }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'woodenstreet-hero__image woodenstreet-hero__image--placeholder' }}
    {% endif %}
  </div>
  <div class="woodenstreet-hero__overlay"></div>
  <div class="woodenstreet-hero__content whisper-glass">
    {% if section.settings.eyebrow != blank %}
      <span class="woodenstreet-hero__eyebrow">{{ section.settings.eyebrow | escape }}</span>
    {% endif %}
    {% if section.settings.title != blank %}
      <h1 class="woodenstreet-hero__title">{{ section.settings.title | escape }}</h1>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="woodenstreet-hero__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    <div class="woodenstreet-hero__actions">
      {% if section.settings.primary_label != blank %}
        <a class="woodenstreet-hero__button button-primary" href="{{ section.settings.primary_link }}">
          {{ section.settings.primary_label | escape }}
        </a>
      {% endif %}
      {% if section.settings.secondary_label != blank %}
        <a class="woodenstreet-hero__button woodenstreet-hero__button--secondary" href="{{ section.settings.secondary_link }}">
          {{ section.settings.secondary_label | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Woodenstreet Hybrid Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Festive Season Offers"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Refresh your home with modern comfort"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Discover curated furniture collections inspired by Woodenstreetâ€™s best-sellers.</p>"
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary CTA label",
      "default": "Shop Living Room"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary CTA link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary CTA label",
      "default": "Explore Offers"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary CTA link"
    }
  ],
  "presets": [
    {
      "name": "Woodenstreet Hybrid Hero"
    }
  ]
}
{% endschema %}
