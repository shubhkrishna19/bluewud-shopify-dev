{% liquid
  assign video_url = section.settings.video_url
  assign poster = section.settings.poster
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link
%}

<section class="ws-video-showcase" aria-label="{{ section.settings.aria_label | escape }}">
  <div class="ws-video-showcase__media">
    {% if video_url != blank %}
      <video
        class="ws-video-showcase__video"
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
        {% if poster != blank %}poster="{{ poster | image_url: width: 1600 }}"{% endif %}
      >
        <source src="{{ video_url }}" type="video/mp4">
      </video>
    {% elsif poster != blank %}
      <img
        class="ws-video-showcase__poster"
        src="{{ poster | image_url: width: 1600 }}"
        alt="{{ poster.alt | escape }}"
        loading="lazy"
      >
    {% endif %}
    <div class="ws-video-showcase__overlay"></div>
  </div>

  <div class="ws-video-showcase__content">
    {% if subheading != blank %}
      <p class="ws-video-showcase__subheading">{{ subheading }}</p>
    {% endif %}
    {% if heading != blank %}
      <h2 class="ws-video-showcase__heading">{{ heading }}</h2>
    {% endif %}
    {% if button_label != blank %}
      <a class="ws-video-showcase__button" href="{{ button_link | default: '#' }}">
        {{ button_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .ws-video-showcase {
    position: relative;
    overflow: hidden;
    border-radius: 32px;
    margin: 40px auto;
    max-width: 1400px;
    background: #000;
    box-shadow: 0 20px 50px rgba(0,0,0,0.15);
  }

  .ws-video-showcase__media {
    position: relative;
    width: 100%;
    aspect-ratio: 21 / 9;
    min-height: 460px;
    background: #000;
  }

  .ws-video-showcase__video,
  .ws-video-showcase__poster {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8;
  }

  .ws-video-showcase__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0) 100%);
  }

  .ws-video-showcase__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: clamp(32px, 8vw, 100px);
    color: #fff;
    gap: 16px;
    z-index: 1;
  }

  .ws-video-showcase__subheading {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 800;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin: 0;
    color: var(--ws-orange, #C7431A);
  }

  .ws-video-showcase__heading {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(32px, 5vw, 64px);
    font-weight: 800;
    line-height: 1.05;
    margin: 0;
    max-width: 600px;
    letter-spacing: -0.03em;
  }

  .ws-video-showcase__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 40px;
    border-radius: 100px;
    background: var(--ws-orange, #C7431A);
    color: #fff;
    text-decoration: none;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 13px;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 0 10px 20px rgba(199, 67, 26, 0.3);
  }

  .ws-video-showcase__button:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 15px 30px rgba(199, 67, 26, 0.4);
    background: #fff;
    color: var(--ws-orange, #C7431A);
  }

  @media (max-width: 768px) {
    .ws-video-showcase {
      border-radius: 0;
      margin: 20px 0;
    }

    .ws-video-showcase__media {
      aspect-ratio: 9 / 16;
      min-height: 500px;
    }
    
    .ws-video-showcase__overlay {
        background: linear-gradient(0deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.1) 100%);
    }

    .ws-video-showcase__content {
      justify-content: flex-end;
      padding: 40px 24px;
      text-align: center;
      align-items: center;
    }

    .ws-video-showcase__heading {
      max-width: 100%;
    }
    
    .ws-video-showcase__button {
        width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "WoodenStreet Video Showcase",
  "settings": [
    {
      "type": "text",
      "id": "aria_label",
      "label": "Aria label",
      "default": "Video showcase"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (MP4)"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "Poster image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium Living"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bring home the calm of crafted luxury"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop the Look"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "WoodenStreet Video Showcase"
    }
  ]
}
{% endschema %}
