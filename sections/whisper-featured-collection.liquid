{% comment %}
  Whisper Featured Collection
  Mirrored from Home.tsx / FeaturedProducts.tsx
{% endcomment %}

<section class="whisper-featured-collection py-24 bg-gradient-to-br from-[var(--color-bg-primary)] via-[var(--color-bg-secondary)] to-[var(--color-bg-primary)] relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary-600/10 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16 animate-fade-in-up">
      <h2 class="text-5xl font-black text-[var(--color-text-primary)] mb-4 tracking-tight italic">
        {{ section.settings.title | escape }}
      </h2>
      <p class="text-xl text-[var(--color-text-secondary)] font-medium max-w-2xl mx-auto">
        {{ section.settings.subheading | escape }}
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {%- assign collection = collections[section.settings.collection] -%}
      {%- for product in collection.products limit: section.settings.product_limit -%}
        <div class="animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;">
          {% render 'whisper-product-card', product: product %}
        </div>
      {%- else -%}
        {%- for i in (1..section.settings.product_limit) -%}
          <div class="bg-[var(--color-bg-secondary)] border-2 border-[var(--color-border-primary)] rounded-2xl aspect-[4/5] flex items-center justify-center">
            <span class="text-[var(--color-text-tertiary)] italic">Product Placeholder</span>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    {% if section.settings.show_view_all %}
      <div class="mt-20 text-center animate-fade-in-up">
        <a href="{{ collection.url }}" class="inline-block px-12 py-5 bg-gradient-to-r from-blue-600 to-cyan-500 text-white rounded-lg font-black uppercase tracking-widest text-lg transform hover:scale-105 transition-all shadow-xl hover:shadow-cyan-500/20">
          {{ section.settings.view_all_label | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Whisper Featured Coll",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Trending Now"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular items and trending collections"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 4,
      "max": 12,
      "step": 4,
      "label": "Product Limit",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All Label",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Whisper Featured Coll"
    }
  ]
}
{% endschema %}
