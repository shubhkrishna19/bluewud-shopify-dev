{% comment %}
  Whisper Featured Collection
  Mirrored from Home.tsx / FeaturedProducts.tsx
{% endcomment %}

<section class="whisper-featured-collection">
  <div class="whisper-featured-collection__container">
    <div class="whisper-featured-collection__header animate-fade-in-up">
      <h2 class="whisper-featured-collection__title">{{ section.settings.title | escape }}</h2>
      <p class="whisper-featured-collection__subtitle">{{ section.settings.subheading | escape }}</p>
    </div>

    <div class="whisper-featured-collection__grid">
      {%- assign collection = collections[section.settings.collection] -%}
      {%- for product in collection.products limit: section.settings.product_limit -%}
        <div class="whisper-featured-collection__item animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;">
          {% render 'whisper-product-card', product: product %}
        </div>
      {%- else -%}
        {%- for i in (1..section.settings.product_limit) -%}
          <div class="whisper-featured-collection__placeholder">
            <span>Product Placeholder</span>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    {% if section.settings.show_view_all %}
      <div class="whisper-featured-collection__cta animate-fade-in-up">
        <a href="{{ collection.url }}" class="whisper-featured-collection__button">
          {{ section.settings.view_all_label | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Whisper Featured Coll",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Trending Now"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular items and trending collections"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 4,
      "max": 12,
      "step": 4,
      "label": "Product Limit",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All Label",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Whisper Featured Coll"
    }
  ]
}
{% endschema %}
