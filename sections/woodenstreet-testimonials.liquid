{% comment %}
  WoodenStreet: Testimonials Section (H-07)
{% endcomment %}

<section class="ws-testimonials" aria-label="Customer reviews">
  <div class="page-width">
    <div class="ws-testimonials__header">
      {% if section.settings.eyebrow != blank %}
        <p class="ws-testimonials__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="ws-testimonials__title">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="ws-testimonials__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="ws-testimonials__slider" role="region" aria-label="Trusted customer testimonials">
      <div class="ws-testimonials__track">
        {% for block in section.blocks %}
          <article class="ws-testimonial-card" {{ block.shopify_attributes }}>
            <div class="ws-testimonial-card__rating" aria-label="5 star rating">
              {% for i in (1..5) %}
                <span class="ws-testimonial-card__star">★</span>
              {% endfor %}
            </div>
            <p class="ws-testimonial-card__text">“{{ block.settings.review }}”</p>
            <div class="ws-testimonial-card__meta">
              <div class="ws-testimonial-card__photo">
                {% if block.settings.photo != blank %}
                  {{ block.settings.photo | image_url: width: 120 | image_tag: loading: 'lazy', alt: block.settings.name }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'ws-testimonial-card__photo-placeholder' }}
                {% endif %}
              </div>
              <div class="ws-testimonial-card__identity">
                <p class="ws-testimonial-card__name">{{ block.settings.name }}</p>
                <p class="ws-testimonial-card__location">{{ block.settings.location }}</p>
                {% if block.settings.verified %}
                  <span class="ws-testimonial-card__verified">
                    <span class="ws-testimonial-card__verified-icon">✓</span>
                    Verified Buyer
                  </span>
                {% endif %}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

