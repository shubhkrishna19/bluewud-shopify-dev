{% layout none %}
{% comment %}
  Template used for the Mobile Quick Add Bottom Sheet.
  Extracted from Empire's quickshop logic but styled for Whisper.
{% endcomment %}

<div class="whisper-quick-add">
  <div class="whisper-quick-add__product">
    <div class="whisper-quick-add__image">
      {{ product.featured_image | image_url: width: 300 | image_tag: loading: 'lazy', class: 'whisper-quick-add__img' }}
    </div>
    <div class="whisper-quick-add__info">
      <h3 class="whisper-quick-add__name">{{ product.title }}</h3>
      <div class="whisper-quick-add__price">
        {% render 'price', product: product %}
      </div>
    </div>
  </div>

  <div class="whisper-quick-add__options">
    {% form 'product', product, data-productid: product.id, class: 'whisper-quick-add__form' %}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      
      {% unless product.has_only_default_variant %}
        {% for option in product.options_with_values %}
          <div class="whisper-quick-add__option">
            <label class="whisper-quick-add__option-label">{{ option.name }}</label>
            <div class="whisper-quick-add__values">
              {% for value in option.values %}
                <label class="whisper-quick-add__value">
                  <input 
                    type="radio" 
                    name="option-{{ option.position }}" 
                    value="{{ value | escape }}"
                    {% if option.selected_value == value %}checked{% endif %}
                    class="whisper-quick-add__radio"
                  >
                  <span class="whisper-quick-add__swatch">{{ value }}</span>
                </label>
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      {% endunless %}

      <div class="whisper-quick-add__actions">
        {% if product.available %}
          <button type="submit" class="whisper-button whisper-button--primary w-full">
            Add to Cart
          </button>
        {% else %}
          <button class="whisper-button whisper-button--secondary w-full" disabled>
            Sold Out
          </button>
        {% endif %}
      </div>
    {% endform %}
  </div>
</div>

<style>
.whisper-quick-add {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.whisper-quick-add__product {
  display: flex;
  gap: 16px;
  align-items: center;
}
.whisper-quick-add__image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
}
.whisper-quick-add__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.whisper-quick-add__name {
  font-size: 1rem;
  font-weight: 700;
  margin: 0 0 4px 0;
}
.whisper-quick-add__option {
  margin-bottom: 16px;
}
.whisper-quick-add__option-label {
  display: block;
  font-size: 0.875rem;
  font-weight: 600;
  margin-bottom: 8px;
  text-transform: uppercase;
  color: #666;
}
.whisper-quick-add__values {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}
.whisper-quick-add__value {
  position: relative;
  cursor: pointer;
}
.whisper-quick-add__radio {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}
.whisper-quick-add__swatch {
  display: block;
  padding: 8px 16px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 0.875rem;
  transition: all 0.2s;
}
.whisper-quick-add__radio:checked + .whisper-quick-add__swatch {
  border-color: #000;
  background: #000;
  color: #fff;
}
</style>
